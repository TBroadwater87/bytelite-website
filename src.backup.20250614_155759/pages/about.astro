import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'About ByteLite';
const description = 'Founded in 2024, ByteLite is revolutionizing data compression with patent-pending technology that achieves previously impossible compression ratios.';
---

<BaseLayout title={title} description={description}>
  <section class="page-header">
    <div class="container">
      <h1>About ByteLite</h1>
      <p class="lead">
        Redefining the limits of information storage through mathematical innovation.
      </p>
    </div>
  </section>

  <section class="story-section">
    <div class="container">
      <div class="story-content">
        <h2>Our Story</h2>
        <p>
          ByteLite began with a simple question: What if we've been thinking about compression all wrong?
        </p>
        <p>
          In 2024, our founder discovered that by combining recursive bijective transformations with segmented domain dictionaries, it was possible to achieve compression ratios that seemed to violate conventional wisdom. After months of refinement and testing, ByteLite was born.
        </p>
        <p>
          Today, we're proud to offer technology that can transform a terabyte of data into just 18 bytes‚Äîa feat that redefines what's possible in data storage and transmission.
        </p>
      </div>
    </div>
  </section>

  <section class="mission-section">
    <div class="container">
      <h2>Our Mission</h2>
      <div class="mission-grid">
        <div class="mission-card">
          <h3>Democratize Storage</h3>
          <p>Make infinite data storage accessible to everyone, from individuals to enterprises.</p>
        </div>
        <div class="mission-card">
          <h3>Enable Innovation</h3>
          <p>Provide tools that unlock new possibilities in AI, scientific computing, and data archival.</p>
        </div>
        <div class="mission-card">
          <h3>Preserve Knowledge</h3>
          <p>Ensure humanity's digital heritage can be stored indefinitely in minimal space.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="timeline-section">
    <div class="container">
      <h2>Company Timeline</h2>
      <div class="timeline">
        <div class="timeline-item">
          <div class="timeline-date">January 2024</div>
          <div class="timeline-content">
            <h3>Initial Discovery</h3>
            <p>First successful recursive compression achieving 99%+ ratios</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-date">March 2024</div>
          <div class="timeline-content">
            <h3>Algorithm Refinement</h3>
            <p>Developed Segmented Domain Dictionary system</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-date">September 2024</div>
          <div class="timeline-content">
            <h3>Company Founded</h3>
            <p>ByteLite LLC officially incorporated in Montana</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-date">January 2025</div>
          <div class="timeline-content">
            <h3>Blueprint Released</h3>
            <p>Technical implementation guide made available</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-date">May 2025</div>
          <div class="timeline-content">
            <h3>Patent Filed</h3>
            <p>U.S. Provisional Patent Application No. 63/807,027</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-date">June 2025</div>
          <div class="timeline-content">
            <h3>Public Launch</h3>
            <p>Website launched, licensing available worldwide</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="team-section">
    <div class="container">
      <h2>Leadership</h2>
      <div class="team-grid">
        <div class="team-member">
          <div class="member-avatar">TB</div>
          <h3>Tash Broadwater</h3>
          <p class="member-title">Founder & Chief Architect</p>
          <p class="member-bio">
            Inventor of the ByteLite algorithm. Background in mathematics, information theory, and software engineering. Passionate about pushing the boundaries of what's computationally possible.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="values-section">
    <div class="container">
      <h2>Our Values</h2>
      <div class="values-grid">
        <div class="value-card">
          <div class="value-icon">üî¨</div>
          <h3>Scientific Rigor</h3>
          <p>Every claim is verifiable. Every result is reproducible. We operate with complete transparency about our methods.</p>
        </div>
        <div class="value-card">
          <div class="value-icon">üåç</div>
          <h3>Global Impact</h3>
          <p>Our technology has the potential to revolutionize how humanity stores and transmits information.</p>
        </div>
        <div class="value-card">
          <div class="value-icon">‚ö°</div>
          <h3>Continuous Innovation</h3>
          <p>We're constantly refining our algorithms and exploring new applications for recursive compression.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="contact-section">
    <div class="container">
      <h2>Get in Touch</h2>
      <div class="contact-info">
        <p>Interested in learning more about ByteLite? We'd love to hear from you.</p>
        <div class="contact-methods">
          <a href="mailto:info@thebytelite.com" class="contact-method">
            <span class="contact-icon">‚úâÔ∏è</span>
            <span>info@thebytelite.com</span>
          </a>
          <a href="tel:+14065550100" class="contact-method">
            <span class="contact-icon">üìû</span>
            <span>(406) 555-0100</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <style>
    .page-header {
      padding: var(--space-3xl) 0 var(--space-2xl);
      background-color: var(--color-surface);
      text-align: center;
    }
    
    .page-header h1 {
      font-size: var(--font-size-4xl);
      margin-bottom: var(--space-lg);
    }
    
    .lead {
      font-size: var(--font-size-xl);
      color: var(--color-text-muted);
      max-width: 800px;
      margin: 0 auto;
    }
    
    .story-section {
      padding: var(--space-3xl) 0;
    }
    
    .story-content {
      max-width: 800px;
      margin: 0 auto;
    }
    
    .story-content h2 {
      font-size: var(--font-size-3xl);
      margin-bottom: var(--space-xl);
    }
    
    .story-content p {
      font-size: var(--font-size-lg);
      line-height: 1.8;
      margin-bottom: var(--space-lg);
    }
    
    .mission-section {
      padding: var(--space-3xl) 0;
      background-color: var(--color-surface);
    }
    
    .mission-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: var(--space-xl);
      margin-top: var(--space-2xl);
    }
    
    .mission-card {
      text-align: center;
    }
    
    .mission-card h3 {
      color: var(--color-primary);
      margin-bottom: var(--space-sm);
    }
    
    .timeline-section {
      padding: var(--space-3xl) 0;
    }
    
    .timeline {
      position: relative;
      max-width: 800px;
      margin: var(--space-2xl) auto 0;
      padding-left: var(--space-2xl);
    }
    
    .timeline::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 2px;
      background-color: var(--color-border);
    }
    
    .timeline-item {
      position: relative;
      margin-bottom: var(--space-2xl);
    }
    
    .timeline-item::before {
      content: '';
      position: absolute;
      left: calc(-1 * var(--space-2xl) - 6px);
      top: 8px;
      width: 12px;
      height: 12px;
      background-color: var(--color-primary);
      border-radius: 50%;
    }
    
    .timeline-date {
      font-size: var(--font-size-sm);
      color: var(--color-text-muted);
      font-weight: 600;
      margin-bottom: var(--space-xs);
    }
    
    .timeline-content h3 {
      font-size: var(--font-size-xl);
      margin-bottom: var(--space-xs);
    }
    
    .team-section {
      padding: var(--space-3xl) 0;
      background-color: var(--color-surface);
    }
    
    .team-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: var(--space-2xl);
      margin-top: var(--space-2xl);
    }
    
    .team-member {
      text-align: center;
    }
    
    .member-avatar {
      width: 120px;
      height: 120px;
      margin: 0 auto var(--space-lg);
      background-color: var(--color-primary);
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: var(--font-size-3xl);
      font-weight: 700;
      border-radius: 50%;
    }
    
    .member-title {
      color: var(--color-text-muted);
      margin-bottom: var(--space-md);
    }
    
    .member-bio {
      max-width: 400px;
      margin: 0 auto;
    }
    
    .values-section {
      padding: var(--space-3xl) 0;
    }
    
    .values-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: var(--space-xl);
      margin-top: var(--space-2xl);
    }
    
    .value-card {
      text-align: center;
      padding: var(--space-xl);
      background-color: var(--color-surface);
      border-radius: 8px;
    }
    
    .value-icon {
      font-size: 3rem;
      margin-bottom: var(--space-md);
    }
    
    .value-card h3 {
      margin-bottom: var(--space-sm);
    }
    
    .contact-section {
      padding: var(--space-3xl) 0;
      background-color: var(--color-surface);
      text-align: center;
    }
    
    .contact-info {
      max-width: 600px;
      margin: 0 auto;
    }
    
    .contact-info p {
      font-size: var(--font-size-lg);
      margin-bottom: var(--space-xl);
    }
    
    .contact-methods {
      display: flex;
      gap: var(--space-xl);
      justify-content: center;
      flex-wrap: wrap;
    }
    
    .contact-method {
      display: flex;
      align-items: center;
      gap: var(--space-sm);
      color: var(--color-primary);
      text-decoration: none;
      font-size: var(--font-size-lg);
      transition: transform var(--transition-base);
    }
    
    .contact-method:hover {
      transform: translateY(-2px);
    }
    
    .contact-icon {
      font-size: var(--font-size-2xl);
    }
  </style>
</BaseLayout>
