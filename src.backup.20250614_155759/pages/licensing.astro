---
/* WCAG 2.2 Checklist:
 * ✅ Pricing table properly structured
 * ✅ Interactive elements keyboard accessible
 * ✅ Currency clearly marked
 * ✅ CTAs have clear purpose
 * ✅ Patent information included
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import ROICalculator from '../components/ROICalculator.astro';

const title = 'ByteLite Licensing';
const description = 'Flexible licensing options for ByteLite compression technology. From personal projects to enterprise deployments.';
---

<BaseLayout title={title} description={description}>
  <section class="page-header">
    <div class="container">
      <h1>Licensing Options</h1>
      <p class="lead">
        Choose the plan that fits your needs. All licenses include the complete blueprint and ongoing updates.
      </p>
    </div>
  </section>

  <section class="pricing-section">
    <div class="container">
      <div class="pricing-grid">
        <div class="pricing-card">
          <div class="pricing-header">
            <h2>Personal</h2>
            <div class="price">
              <span class="currency">$</span>
              <span class="amount">49</span>
              <span class="period">/year</span>
            </div>
          </div>
          <div class="pricing-features">
            <h3 class="sr-only">Features included:</h3>
            <ul>
              <li>✓ Complete technical blueprint</li>
              <li>✓ Personal and research use</li>
              <li>✓ Community forum access</li>
              <li>✓ Quarterly updates</li>
              <li>✓ Email support</li>
            </ul>
          </div>
          <div class="pricing-cta">
            <a href="/download" class="btn btn-secondary btn-block">Get Started</a>
          </div>
        </div>
        
        <div class="pricing-card featured">
          <div class="pricing-badge">Most Popular</div>
          <div class="pricing-header">
            <h2>Professional</h2>
            <div class="price">
              <span class="currency">$</span>
              <span class="amount">499</span>
              <span class="period">/year</span>
            </div>
          </div>
          <div class="pricing-features">
            <h3 class="sr-only">Features included:</h3>
            <ul>
              <li>✓ Everything in Personal</li>
              <li>✓ Commercial use rights</li>
              <li>✓ Priority support</li>
              <li>✓ Implementation assistance</li>
              <li>✓ Monthly updates</li>
              <li>✓ 5 developer seats</li>
            </ul>
          </div>
          <div class="pricing-cta">
            <a href="/download" class="btn btn-primary btn-block">Get Started</a>
          </div>
        </div>
        
        <div class="pricing-card">
          <div class="pricing-header">
            <h2>Enterprise</h2>
            <div class="price">
              <span class="currency">$</span>
              <span class="amount">4,999</span>
              <span class="period">/year</span>
            </div>
          </div>
          <div class="pricing-features">
            <h3 class="sr-only">Features included:</h3>
            <ul>
              <li>✓ Everything in Professional</li>
              <li>✓ Unlimited developers</li>
              <li>✓ White-label options</li>
              <li>✓ Custom integration support</li>
              <li>✓ SLA guarantee</li>
              <li>✓ Dedicated account manager</li>
            </ul>
          </div>
          <div class="pricing-cta">
            <a href="#contact" class="btn btn-secondary btn-block">Contact Sales</a>
          </div>
        </div>
      </div>
      
      <div class="pricing-note">
        <p>All prices in USD. Volume discounts available for Enterprise.</p>
      </div>
    </div>
  </section>

  <section class="comparison-section">
    <div class="container">
      <h2>Detailed Feature Comparison</h2>
      <div class="comparison-table-wrapper">
        <table class="feature-comparison">
          <thead>
            <tr>
              <th scope="col">Feature</th>
              <th scope="col">Personal</th>
              <th scope="col">Professional</th>
              <th scope="col">Enterprise</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">Blueprint Access</th>
              <td>✓</td>
              <td>✓</td>
              <td>✓</td>
            </tr>
            <tr>
              <th scope="row">Dictionary Files</th>
              <td>✓</td>
              <td>✓</td>
              <td>✓</td>
            </tr>
            <tr>
              <th scope="row">Commercial Use</th>
              <td>—</td>
              <td>✓</td>
              <td>✓</td>
            </tr>
            <tr>
              <th scope="row">Developer Seats</th>
              <td>1</td>
              <td>5</td>
              <td>Unlimited</td>
            </tr>
            <tr>
              <th scope="row">Support Response</th>
              <td>72 hours</td>
              <td>24 hours</td>
              <td>2 hours</td>
            </tr>
            <tr>
              <th scope="row">Implementation Help</th>
              <td>—</td>
              <td>✓</td>
              <td>✓</td>
            </tr>
            <tr>
              <th scope="row">Custom Integration</th>
              <td>—</td>
              <td>—</td>
              <td>✓</td>
            </tr>
            <tr>
              <th scope="row">White Label</th>
              <td>—</td>
              <td>—</td>
              <td>✓</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <ROICalculator />

  <section class="patent-section" id="patent">
    <div class="container">
      <h2>Patent Information</h2>
      <div class="patent-info">
        <p>
          ByteLite's Dynamic Algorithmic Compression technology is protected by pending patent applications:
        </p>
        <ul>
          <li>U.S. Provisional Patent Application No. 63/807,027</li>
          <li>Title: "Data Compression and Decompression Pipeline"</li>
          <li>Filed: May 16, 2025</li>
        </ul>
        <p>
          All licenses include the right to use our patented technology within the scope of your license agreement. Patent protection ensures your investment in ByteLite technology is secure.
        </p>
      </div>
    </div>
  </section>

  <section class="faq-section">
    <div class="container">
      <h2>Licensing FAQ</h2>
      
      <details class="faq-item">
        <summary>Can I upgrade my license later?</summary>
        <p>
          Yes! You can upgrade at any time and we'll prorate the difference. Contact support to process an upgrade.
        </p>
      </details>
      
      <details class="faq-item">
        <summary>What counts as commercial use?</summary>
        <p>
          Commercial use includes any deployment where ByteLite compression is used in a product or service that generates revenue, whether directly or indirectly. Internal business use also requires a commercial license.
        </p>
      </details>
      
      <details class="faq-item">
        <summary>Do I need a license for evaluation?</summary>
        <p>
          No. You can download and evaluate the blueprint for 30 days without a license. A license is only required for deployment or continued development.
        </p>
      </details>
      
      <details class="faq-item">
        <summary>Is the license perpetual or subscription?</summary>
        <p>
          Licenses are annual subscriptions that include updates and support. You can continue using the version you have if you don't renew, but won't receive updates or support.
        </p>
      </details>
      
      <details class="faq-item">
        <summary>Can I redistribute ByteLite?</summary>
        <p>
          Redistribution rights are only included with Enterprise licenses under specific terms. Contact us to discuss white-label or OEM arrangements.
        </p>
      </details>
    </div>
  </section>

  <section class="cta-section" id="contact">
    <div class="container">
      <div class="cta-box">
        <h2>Ready to Transform Your Data Infrastructure?</h2>
        <p>Join forward-thinking companies already using ByteLite to achieve the impossible.</p>
        <div class="cta-actions">
          <a href="/download" class="btn btn-primary">Start Free Trial</a>
          <a href="mailto:sales@thebytelite.com" class="btn btn-secondary">Contact Sales</a>
        </div>
      </div>
    </div>
  </section>

  <style>
    .page-header {
      padding: var(--space-3xl) 0 var(--space-2xl);
      background-color: var(--color-surface);
      text-align: center;
    }
    
    .page-header h1 {
      font-size: var(--font-size-4xl);
      margin-bottom: var(--space-lg);
    }
    
    .lead {
      font-size: var(--font-size-xl);
      color: var(--color-text-muted);
      max-width: 800px;
      margin: 0 auto;
    }
    
    .pricing-section {
      padding: var(--space-3xl) 0;
    }
    
    .pricing-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: var(--space-xl);
      margin-bottom: var(--space-xl);
    }
    
    .pricing-card {
      background-color: var(--color-surface);
      border: 2px solid var(--color-border);
      border-radius: 8px;
      padding: var(--space-xl);
      position: relative;
      transition: transform var(--transition-base), box-shadow var(--transition-base);
    }
    
    .pricing-card:hover {
      transform: translateY(-4px);
      box-shadow: var(--shadow-lg);
    }
    
    .pricing-card.featured {
      border-color: var(--color-primary);
      transform: scale(1.05);
    }
    
    .pricing-card.featured:hover {
      transform: scale(1.05) translateY(-4px);
    }
    
    .pricing-badge {
      position: absolute;
      top: -12px;
      left: 50%;
      transform: translateX(-50%);
      background-color: var(--color-primary);
      color: white;
      padding: var(--space-xs) var(--space-md);
      border-radius: 20px;
      font-size: var(--font-size-sm);
      font-weight: 600;
    }
    
    .pricing-header {
      text-align: center;
      margin-bottom: var(--space-xl);
    }
    
    .pricing-header h2 {
      font-size: var(--font-size-2xl);
      margin-bottom: var(--space-md);
    }
    
    .price {
      display: flex;
      align-items: baseline;
      justify-content: center;
      gap: var(--space-xs);
    }
    
    .currency {
      font-size: var(--font-size-xl);
      color: var(--color-text-muted);
    }
    
    .amount {
      font-size: var(--font-size-4xl);
      font-weight: 700;
      color: var(--color-primary);
    }
    
    .period {
      color: var(--color-text-muted);
    }
    
    .pricing-features ul {
      list-style: none;
      padding: 0;
      margin: 0 0 var(--space-xl);
    }
    
    .pricing-features li {
      padding: var(--space-sm) 0;
      border-bottom: 1px solid var(--color-border);
    }
    
    .pricing-features li:last-child {
      border-bottom: none;
    }
    
    .pricing-note {
      text-align: center;
      color: var(--color-text-muted);
      font-size: var(--font-size-sm);
    }
    
    .comparison-section {
      padding: var(--space-3xl) 0;
      background-color: var(--color-surface);
    }
    
    .comparison-table-wrapper {
      overflow-x: auto;
      margin-top: var(--space-2xl);
    }
    
    .feature-comparison {
      width: 100%;
      min-width: 600px;
    }
    
    .feature-comparison th {
      text-align: left;
      padding: var(--space-md);
      background-color: var(--color-background);
      font-weight: 600;
    }
    
    .feature-comparison td {
      text-align: center;
      padding: var(--space-md);
    }
    
    .feature-comparison tbody th {
      font-weight: normal;
    }
    
    .patent-section {
      padding: var(--space-3xl) 0;
    }
    
    .patent-info {
      max-width: 800px;
      margin: 0 auto;
      background-color: var(--color-surface);
      padding: var(--space-2xl);
      border-radius: 8px;
      border-left: 4px solid var(--color-primary);
    }
    
    .patent-info ul {
      margin: var(--space-lg) 0;
      padding-left: var(--space-xl);
    }
    
    .faq-section {
      padding: var(--space-3xl) 0;
      background-color: var(--color-surface);
    }
    
    .faq-item {
      max-width: 800px;
      margin: 0 auto var(--space-md);
    }
    
    .faq-item summary {
      cursor: pointer;
      padding: var(--space-md) var(--space-lg);
      background-color: var(--color-background);
      border-radius: 8px;
      font-weight: 600;
      transition: background-color var(--transition-base);
    }
    
    .faq-item summary:hover {
      background-color: var(--color-primary);
      color: white;
    }
    
    .faq-item[open] summary {
      border-radius: 8px 8px 0 0;
      background-color: var(--color-primary);
      color: white;
    }
    
    .faq-item p {
      background-color: var(--color-background);
      padding: var(--space-lg);
      margin: 0;
      border-radius: 0 0 8px 8px;
    }
    
    .cta-section {
      padding: var(--space-3xl) 0;
    }
    
    .cta-box {
      background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
      color: white;
      padding: var(--space-3xl);
      border-radius: 8px;
      text-align: center;
    }
    
    .cta-box h2 {
      font-size: var(--font-size-3xl);
      margin-bottom: var(--space-md);
    }
    
    .cta-box p {
      font-size: var(--font-size-lg);
      margin-bottom: var(--space-xl);
      opacity: 0.9;
    }
    
    .cta-actions {
      display: flex;
      gap: var(--space-md);
      justify-content: center;
      flex-wrap: wrap;
    }
    
    .cta-box .btn-primary {
      background-color: white;
      color: var(--color-primary);
    }
    
    .cta-box .btn-secondary {
      background-color: transparent;
      color: white;
      border-color: white;
    }
    
    .cta-box .btn:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-lg);
    }
  </style>
</BaseLayout>
