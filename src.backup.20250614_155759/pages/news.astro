---
import Layout from '../layouts/Layout.astro';

const newsItems = [
  {
    date: "May 16, 2025",
    title: "ByteLite Files Patent for Revolutionary Compression Technology",
    excerpt: "U.S. Provisional Patent Application No. 63/807,027 filed for Dynamic Algorithmic Compression enabling 1TB → 18 bytes compression",
    tag: "Patent"
  },
  {
    date: "June 1, 2025",
    title: "ByteLite Submits to Prestigious Hutter Prize Competition",
    excerpt: "Competing for compression excellence with our breakthrough technology that achieves 99.99999999999% compression ratios",
    tag: "Competition"
  },
  {
    date: "June 10, 2025",
    title: "SBIR Phase I: Bringing ByteLite to Government Applications",
    excerpt: "Submitted proposal for advanced data compression in defense and space applications, targeting infinite storage capabilities",
    tag: "Funding"
  }
];
---

<Layout title="News & Updates - ByteLite">
  <main>
    <section class="news-section">
      <div class="container">
        <h1>News & Updates</h1>
        <p class="subtitle">Latest developments in ByteLite compression technology</p>
        
        <div class="news-grid">
          {newsItems.map(item => (
            <article class="news-card">
              <div class="news-header">
                <time>{item.date}</time>
                <span class="tag">{item.tag}</span>
              </div>
              <h3>{item.title}</h3>
              <p>{item.excerpt}</p>
              <a href="#" class="read-more">Read more →</a>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .news-section {
    min-height: 100vh;
    padding: 80px 0;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #00D4FF, #FF006E);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .subtitle {
    font-size: 1.25rem;
    color: #999;
    margin-bottom: 3rem;
  }
  
  .news-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  }
  
  .news-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 32px;
    transition: all 0.3s ease;
  }
  
  .news-card:hover {
    transform: translateY(-4px);
    border-color: #00D4FF;
    box-shadow: 0 10px 40px rgba(0, 212, 255, 0.1);
  }
  
  .news-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
  }
  
  time {
    color: #00D4FF;
    font-size: 0.875rem;
  }
  
  .tag {
    background: rgba(0, 212, 255, 0.1);
    color: #00D4FF;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    text-transform: uppercase;
  }
  
  h3 {
    margin: 12px 0;
    font-size: 1.5rem;
    line-height: 1.3;
  }
  
  p {
    color: #ccc;
    line-height: 1.6;
    margin-bottom: 20px;
  }
  
  .read-more {
    color: #00D4FF;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }
  
  .read-more:hover {
    color: #fff;
  }
</style>
