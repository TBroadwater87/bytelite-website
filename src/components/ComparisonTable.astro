<section class="comparison-section">
  <div class="container">
    <h2>Beyond Traditional Compression</h2>
    <div class="comparison-table">
      <table>
        <thead>
          <tr>
            <th>Technology</th>
            <th>Compression Ratio</th>
            <th>Lossless</th>
            <th>Speed</th>
          </tr>
        </thead>
        <tbody>
          <tr class="highlight">
            <td><strong>ByteLite</strong></td>
            <td><strong>99.999998%</strong></td>
            <td>✓</td>
            <td>Fast</td>
          </tr>
          <tr>
            <td>ZIP</td>
            <td>50-60%</td>
            <td>✓</td>
            <td>Very Fast</td>
          </tr>
          <tr>
            <td>RAR</td>
            <td>60-70%</td>
            <td>✓</td>
            <td>Fast</td>
          </tr>
          <tr>
            <td>7-Zip</td>
            <td>70-80%</td>
            <td>✓</td>
            <td>Slow</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</section>

<style>
  .comparison-section {
    padding: 4rem 0;
    background: #0A0E27;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: #00D4FF;
  }
  
  .comparison-table {
    overflow-x: auto;
  }
  
  table {
    width: 100%;
    border-collapse: collapse;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: 1rem;
    overflow: hidden;
  }
  
  th {
    background: rgba(0, 212, 255, 0.1);
    color: #00D4FF;
    padding: 1rem;
    text-align: left;
    font-weight: 600;
  }
  
  td {
    padding: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    color: #B8C5D6;
  }
  
  tr.highlight td {
    background: rgba(255, 0, 110, 0.05);
    color: white;
  }
  
  @media (max-width: 600px) {
    table {
      font-size: 0.875rem;
    }
    
    th, td {
      padding: 0.5rem;
    }
  }
</style>
