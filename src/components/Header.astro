---
import HeaderLink from './HeaderLink.astro';
---

<header class="bg-dark-navy/95 backdrop-blur-md border-b border-electric-cyan/20 sticky top-0 z-50">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      
      <!-- Logo -->
      <div class="flex items-center space-x-3">
        <a href="/" class="flex items-center space-x-3 group">
          <img src="/bytelite-logo.png" alt="ByteLite" class="h-10 w-auto transition-transform group-hover:scale-110" />
          <span class="text-xl font-bold text-white group-hover:text-electric-cyan transition-colors">ByteLite</span>
        </a>
      </div>

      <!-- Navigation Links -->
      <div class="hidden md:flex items-center space-x-8">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/technology">Technology</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
        <HeaderLink href="/download">Download</HeaderLink>
        <HeaderLink href="/licensing">Licensing</HeaderLink>
        <HeaderLink href="/news">News</HeaderLink>
        <HeaderLink href="/contact">Contact</HeaderLink>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button class="text-white hover:text-electric-cyan transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header>
