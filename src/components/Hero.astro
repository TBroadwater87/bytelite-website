---
export interface Props {
  variant?: 'default' | 'banner' | 'minimal';
  showPatentBadge?: boolean;
  showStats?: boolean;
  showBackground?: boolean;
}

const {
  variant = 'default',
  showPatentBadge = true,
  showStats = true,
  showBackground = true,
} = Astro.props;
---

<!-- Trust Bar - Sticky -->
<div class="trust-bar">
  <div class="trust-bar-content">
    <span class="trust-item">US Patent 63/807,027</span>
    <span class="trust-separator">•</span>
    <span class="trust-item">22 Patents Pending</span>
    <span class="trust-separator">•</span>
    <span class="trust-item">Working Technology</span>
  </div>
</div>

<section class={`hero ${variant}`}>
  {showBackground && (
    <div class="hero-background">
      <div class="gradient-overlay"></div>
      <div class="particle-field" id="particleField"></div>
    </div>
  )}
  
  <div class="hero-content">
    <div class="split-panels">
      <!-- ByteLite Panel -->
      <div class="tech-panel bytelite">
        <div class="panel-content">
          <h2 class="tech-name">ByteLite</h2>
          <div class="tech-transformation">
            <span class="from">1GB</span>
            <span class="arrow">→</span>
            <span class="to">15 bytes</span>
          </div>
          <p class="tech-headline">Revolutionary data compression achieving 99.999% reduction</p>
        </div>
      </div>
      
      <!-- Divider -->
      <div class="panel-divider">
        <div class="divider-line"></div>
        <div class="divider-pulse"></div>
      </div>
      
      <!-- Deep Kore Panel -->
      <div class="tech-panel deepkore">
        <div class="panel-content">
          <h2 class="tech-name">Deep Kore</h2>
          <div class="tech-transformation">
            <span class="from">Compression</span>
            <span class="arrow">→</span>
            <span class="to">Consciousness</span>
          </div>
          <p class="tech-headline">Compression mathematics enabling true artificial general intelligence</p>
        </div>
      </div>
    </div>
    
    <!-- CTAs -->
    <div class="hero-cta">
      <button class="btn btn-primary btn-large" data-action="early-access">Request Early Access</button>
      <a href="/demo" class="btn btn-secondary">See Live Demo</a>
    </div>
  </div>
</section>

<style>
  /* Trust Bar */
  .trust-bar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(10, 14, 39, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    z-index: 100;
    padding: 0.75rem 1rem;
    transform: translateY(-100%);
    transition: transform 0.3s ease;
  }
  
  .trust-bar.visible {
    transform: translateY(0);
  }
  
  .trust-bar-content {
    max-width: 1400px;
    margin: 0 auto;
    text-align: center;
    font-size: 0.875rem;
    color: rgba(224, 224, 224, 0.8);
    font-weight: 500;
  }
  
  .trust-separator {
    margin: 0 1rem;
    opacity: 0.5;
  }
  
  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    background: linear-gradient(180deg, #0A0E27 0%, #060813 100%);
    padding: 2rem;
    position: relative;
    overflow: hidden;
    padding-top: 5rem; /* Account for trust bar */
  }
  
  /* Background */
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;
  }
  
  .gradient-overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(circle at 25% 50%, rgba(0, 212, 255, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 75% 50%, rgba(168, 85, 247, 0.15) 0%, transparent 50%);
  }
  
  /* Content */
  .hero-content {
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
    position: relative;
    z-index: 1;
  }
  
  /* Split Panels */
  .split-panels {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 2rem;
    margin-bottom: 4rem;
    align-items: stretch;
  }
  
  .tech-panel {
    background: rgba(10, 14, 39, 0.7);
    border-radius: 16px;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .tech-panel::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 16px;
    padding: 1px;
    background: linear-gradient(135deg, transparent, var(--panel-color), transparent);
    -webkit-mask: 
      linear-gradient(#fff 0 0) content-box, 
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0.3;
    transition: opacity 0.3s ease;
  }
  
  .tech-panel:hover::before {
    opacity: 0.6;
  }
  
  .tech-panel.bytelite {
    --panel-color: #00D4FF;
  }
  
  .tech-panel.deepkore {
    --panel-color: #A855F7;
  }
  
  .tech-panel:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }
  
  .tech-panel.bytelite:hover {
    box-shadow: 0 20px 40px rgba(0, 212, 255, 0.2);
  }
  
  .tech-panel.deepkore:hover {
    box-shadow: 0 20px 40px rgba(168, 85, 247, 0.2);
  }
  
  .panel-content {
    padding: 3rem 2rem;
    text-align: center;
    min-width: 0;
  }
  
  /* Panel Typography */
  .tech-name {
    font-size: 1.125rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin: 0 0 1.5rem;
  }
  
  .bytelite .tech-name {
    color: #00D4FF;
  }
  
  .deepkore .tech-name {
    color: #A855F7;
  }
  
  .tech-transformation {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    font-size: clamp(1.75rem, 4vw, 3rem);
    font-weight: 700;
    margin-bottom: 1.5rem;
    white-space: nowrap;
    flex-wrap: wrap;
  }
  
  .tech-transformation .from {
    color: #E0E0E0;
  }
  
  .tech-transformation .arrow {
    color: #666;
    font-weight: 300;
  }
  
  .bytelite .tech-transformation .to {
    color: #00D4FF;
    text-shadow: 0 0 20px rgba(0, 212, 255, 0.5);
  }
  
  .deepkore .tech-transformation .to {
    color: #A855F7;
    text-shadow: 0 0 20px rgba(168, 85, 247, 0.5);
  }
  
  .tech-headline {
    font-size: clamp(1rem, 2vw, 1.25rem);
    font-weight: 400;
    margin: 0;
    color: rgba(224, 224, 224, 0.8);
    line-height: 1.5;
  }
  
  /* Divider */
  .panel-divider {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .divider-line {
    width: 2px;
    height: 200px;
    background: linear-gradient(
      to bottom,
      transparent,
      rgba(0, 212, 255, 0.3),
      rgba(168, 85, 247, 0.3),
      transparent
    );
    position: relative;
  }
  
  .divider-pulse {
    position: absolute;
    width: 20px;
    height: 20px;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.8), transparent);
    border-radius: 50%;
    animation: pulse-flow 3s infinite ease-in-out;
  }
  
  /* CTAs */
  .hero-cta {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .btn {
    padding: 1rem 2.5rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
    border: none;
    cursor: pointer;
    font-size: 1rem;
    text-align: center;
  }
  
  .btn-large {
    padding: 1.25rem 3rem;
    font-size: 1.125rem;
  }
  
  .btn-primary {
    background: linear-gradient(135deg, #00D4FF 0%, #0099CC 100%);
    color: #0A0E27;
  }
  
  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 212, 255, 0.4);
  }
  
  .btn-secondary {
    background: transparent;
    color: #E0E0E0;
    border: 2px solid rgba(224, 224, 224, 0.3);
  }
  
  .btn-secondary:hover {
    border-color: #A855F7;
    color: #A855F7;
    background: rgba(168, 85, 247, 0.05);
    transform: translateY(-2px);
  }
  
  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .trust-bar-content {
      font-size: 0.75rem;
    }
    
    .trust-separator {
      margin: 0 0.5rem;
    }
    
    .hero {
      padding-top: 4rem;
    }
    
    .split-panels {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .panel-divider {
      display: none;
    }
    
    .tech-panel {
      border-radius: 12px;
    }
    
    .panel-content {
      padding: 2rem;
    }
    
    .tech-transformation {
      font-size: 1.5rem; /* Adjusted for better fit */
      gap: 0.5rem;
    }
    
    .tech-headline {
      font-size: 1rem;
    }
    
    .tech-name {
      font-size: 1rem;
      margin-bottom: 1rem;
    }
    
    .divider-line {
      width: 100%;
      height: 2px;
      background: linear-gradient(
        to right,
        transparent,
        rgba(0, 212, 255, 0.3),
        rgba(168, 85, 247, 0.3),
        transparent
      );
    }
    
    .hero-cta {
      flex-direction: column;
      align-items: center;
    }
    
    .btn {
      width: 100%;
      max-width: 300px;
    }
  }
  
  /* Extra small screens */
  @media (max-width: 480px) {
    .tech-transformation {
      font-size: 1.25rem;
      flex-direction: column;
      gap: 0.25rem;
      white-space: normal;
    }
    
    .tech-transformation .arrow {
      transform: rotate(90deg);
    }
    
    .panel-content {
      padding: 1.5rem 1rem;
    }
  }
  
  /* Animations */
  @keyframes pulse-flow {
    0% {
      transform: translateY(-100px);
      opacity: 0;
    }
    20% {
      opacity: 1;
    }
    80% {
      opacity: 1;
    }
    100% {
      transform: translateY(100px);
      opacity: 0;
    }
  }
  
  @keyframes particle-float {
    0% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -30px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0, 0) scale(1);
    }
  }
</style>

<script>
  // Trust bar visibility
  const trustBar = document.querySelector('.trust-bar');
  
  if (trustBar) {
    window.addEventListener('scroll', () => {
      if (window.scrollY > 100) {
        trustBar.classList.add('visible');
      } else {
        trustBar.classList.remove('visible');
      }
    });
  }
  
  // Particle animation
  const particleField = document.getElementById('particleField');
  const particleCount = 50;
  
  if (particleField) {
    for (let i = 0; i < particleCount; i++) {
      const particle = document.createElement('div');
      particle.className = 'particle';
      particle.style.cssText = `
        position: absolute;
        width: 2px;
        height: 2px;
        background: ${Math.random() > 0.5 ? '#00D4FF' : '#A855F7'};
        opacity: ${Math.random() * 0.5 + 0.2};
        left: ${Math.random() * 100}%;
        top: ${Math.random() * 100}%;
        animation: particle-float ${15 + Math.random() * 10}s infinite ease-in-out;
        animation-delay: ${Math.random() * 5}s;
      `;
      particleField.appendChild(particle);
    }
  }
  
  // Early access modal handler
  const earlyAccessBtn = document.querySelector('[data-action="early-access"]');
  
  if (earlyAccessBtn) {
    earlyAccessBtn.addEventListener('click', () => {
      // This will be handled by a global modal system
      window.dispatchEvent(new CustomEvent('show-early-access-modal'));
    });
  }
</script>