---
// Hero component for ByteLite
---

<section class="hero bg-dark-navy text-white min-h-screen flex items-center relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-br from-deep-space via-dark-navy to-black opacity-90"></div>
  
  <div class="container mx-auto px-6 relative z-10">
    <div class="text-center max-w-4xl mx-auto">
      <!-- Patent Badge -->
      <div class="inline-flex items-center bg-electric-cyan/10 border border-electric-cyan/30 rounded-full px-6 py-2 mb-8">
        <span class="text-electric-cyan text-sm font-mono">US Patent Pending 63/807,027</span>
      </div>
      
      <!-- Main Headline -->
      <h1 class="text-6xl md:text-8xl font-bold mb-6 leading-tight">
        <span class="text-white">1TB</span>
        <span class="text-electric-cyan mx-4">â†’</span>
        <span class="text-quantum-pink">18 Bytes</span>
      </h1>
      
      <!-- Subheadline -->
      <h2 class="text-2xl md:text-3xl text-gray-300 mb-8 leading-relaxed">
        Revolutionary Compression That Redefines Data Storage
      </h2>
      
      <!-- Key Features -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-12">
        <div class="text-center">
          <div class="text-electric-cyan text-xl font-bold">99.999%+</div>
          <div class="text-gray-400 text-sm">Compression Ratio</div>
        </div>
        <div class="text-center">
          <div class="text-electric-cyan text-xl font-bold">200KB</div>
          <div class="text-gray-400 text-sm">Engine Size</div>
        </div>
        <div class="text-center">
          <div class="text-electric-cyan text-xl font-bold">Lossless</div>
          <div class="text-gray-400 text-sm">Zero Data Loss</div>
        </div>
        <div class="text-center">
          <div class="text-electric-cyan text-xl font-bold">Universal</div>
          <div class="text-gray-400 text-sm">Any File Type</div>
        </div>
      </div>
      
      <!-- Call to Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/download" 
           class="bg-electric-cyan text-dark-navy px-8 py-4 rounded-lg font-semibold hover:bg-electric-cyan/90 transition-colors">
          Download Technical Blueprint
        </a>
        <a href="/technology" 
           class="border border-electric-cyan text-electric-cyan px-8 py-4 rounded-lg font-semibold hover:bg-electric-cyan/10 transition-colors">
          Explore Technology
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    background-image: 
      radial-gradient(circle at 25% 25%, rgba(0, 212, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 75% 75%, rgba(255, 0, 110, 0.1) 0%, transparent 50%);
  }
</style>
