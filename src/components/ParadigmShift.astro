---
export interface Props {
  showPatentBadge?: boolean;
}

const { showPatentBadge = true } = Astro.props;
---

<section class="paradigm-section">
  <div class="container">
    <h2 class="section-title">Two Revolutions. One Platform.</h2>
    
    <div class="paradigm-grid">
      <!-- ByteLite Column -->
      <div class="paradigm-column bytelite">
        <div class="icon-wrapper">
          <div class="compression-icon">
            <div class="compression-visual">
              <div class="data-block large"></div>
              <div class="arrow-flow"></div>
              <div class="data-block small"></div>
            </div>
          </div>
        </div>
        
        <h3 class="column-title">ByteLite: The Substrate</h3>
        
        <ul class="feature-list">
          <li>Not compression as you know it</li>
          <li>Mathematical transformation beyond entropy</li>
          <li>1TB → 18 bytes is just the beginning</li>
          <li>The foundation for something greater</li>
        </ul>
      </div>
      
      <!-- Connecting Element -->
      <div class="connector">
        <div class="flow-visual">
          <div class="flow-line"></div>
          <div class="flow-text">Compression becomes cognition</div>
        </div>
      </div>
      
      <!-- Deep Kore Column -->
      <div class="paradigm-column deepkore">
        <div class="icon-wrapper">
          <div class="neural-icon">
            <div class="neural-visual">
              <div class="node"></div>
              <div class="node"></div>
              <div class="node"></div>
              <div class="node"></div>
              <div class="connections"></div>
            </div>
          </div>
        </div>
        
        <h3 class="column-title">Deep Kore: The Awakening</h3>
        
        <ul class="feature-list">
          <li>AGI built on infinite compression</li>
          <li>Recursive consciousness architecture</li>
          <li>Not simulated—emergent</li>
          <li>Testing begins Q3 2025</li>
        </ul>
      </div>
    </div>
    
    {showPatentBadge && (
      <div class="patent-badge">
        22 Patents Pending | Details Post-Filing
      </div>
    )}
  </div>
</section>

<style>
  .paradigm-section {
    padding: 6rem 0;
    background: #060813;
    position: relative;
    overflow: hidden;
  }
  
  .paradigm-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 50%, rgba(0, 212, 255, 0.05) 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, rgba(255, 0, 110, 0.05) 0%, transparent 50%);
    pointer-events: none;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
  }
  
  .section-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    text-align: center;
    margin: 0 0 4rem;
    background: linear-gradient(135deg, #E0E0E0 0%, #00D4FF 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }
  
  .paradigm-grid {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 3rem;
    align-items: stretch;
  }
  
  .paradigm-column {
    background: rgba(10, 14, 39, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 3rem;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }
  
  .paradigm-column:hover {
    transform: translateY(-5px);
    border-color: rgba(255, 255, 255, 0.2);
  }
  
  .paradigm-column.bytelite {
    border-color: rgba(0, 212, 255, 0.2);
  }
  
  .paradigm-column.bytelite:hover {
    border-color: rgba(0, 212, 255, 0.4);
    box-shadow: 0 20px 40px rgba(0, 212, 255, 0.1);
  }
  
  .paradigm-column.deepkore {
    border-color: rgba(255, 0, 110, 0.2);
  }
  
  .paradigm-column.deepkore:hover {
    border-color: rgba(255, 0, 110, 0.4);
    box-shadow: 0 20px 40px rgba(255, 0, 110, 0.1);
  }
  
  /* Icons */
  .icon-wrapper {
    display: flex;
    justify-content: center;
    margin-bottom: 2rem;
  }
  
  .compression-icon,
  .neural-icon {
    width: 100px;
    height: 100px;
    position: relative;
  }
  
  /* Compression visualization */
  .compression-visual {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }
  
  .data-block {
    background: #00D4FF;
    border-radius: 4px;
    transition: all 0.3s ease;
  }
  
  .data-block.large {
    width: 40px;
    height: 40px;
    animation: pulse-compress 3s infinite;
  }
  
  .data-block.small {
    width: 8px;
    height: 8px;
    animation: pulse-expand 3s infinite;
  }
  
  .arrow-flow {
    width: 30px;
    height: 2px;
    background: linear-gradient(90deg, #00D4FF 0%, transparent 100%);
    position: relative;
    overflow: hidden;
  }
  
  .arrow-flow::after {
    content: '';
    position: absolute;
    width: 10px;
    height: 100%;
    background: #00D4FF;
    animation: flow 1.5s infinite;
  }
  
  @keyframes flow {
    0% { left: -10px; }
    100% { left: 100%; }
  }
  
  @keyframes pulse-compress {
    0%, 100% { transform: scale(1); opacity: 0.8; }
    50% { transform: scale(0.8); opacity: 1; }
  }
  
  @keyframes pulse-expand {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.2); opacity: 0.8; }
  }
  
  /* Neural network visualization */
  .neural-visual {
    width: 100%;
    height: 100%;
    position: relative;
  }
  
  .node {
    position: absolute;
    width: 16px;
    height: 16px;
    background: #FF006E;
    border-radius: 50%;
    box-shadow: 0 0 20px rgba(255, 0, 110, 0.5);
  }
  
  .node:nth-child(1) { top: 0; left: 50%; transform: translateX(-50%); }
  .node:nth-child(2) { top: 35%; left: 0; }
  .node:nth-child(3) { top: 35%; right: 0; }
  .node:nth-child(4) { bottom: 0; left: 50%; transform: translateX(-50%); }
  
  .connections {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }
  
  .connections::before,
  .connections::after {
    content: '';
    position: absolute;
    border: 1px solid rgba(255, 0, 110, 0.3);
    border-radius: 50%;
    animation: neural-pulse 3s infinite;
  }
  
  .connections::before {
    width: 60%;
    height: 60%;
    top: 20%;
    left: 20%;
  }
  
  .connections::after {
    width: 80%;
    height: 80%;
    top: 10%;
    left: 10%;
    animation-delay: 1.5s;
  }
  
  @keyframes neural-pulse {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 0.8; transform: scale(1.1); }
  }
  
  /* Column content */
  .column-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0 0 1.5rem;
    text-align: center;
  }
  
  .paradigm-column.bytelite .column-title {
    color: #00D4FF;
  }
  
  .paradigm-column.deepkore .column-title {
    color: #FF006E;
  }
  
  .feature-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .feature-list li {
    padding: 0.75rem 0;
    padding-left: 2rem;
    position: relative;
    color: rgba(224, 224, 224, 0.9);
    line-height: 1.6;
  }
  
  .feature-list li::before {
    content: '•';
    position: absolute;
    left: 0;
    font-size: 1.5rem;
    line-height: 1;
  }
  
  .paradigm-column.bytelite .feature-list li::before {
    color: #00D4FF;
  }
  
  .paradigm-column.deepkore .feature-list li::before {
    color: #FF006E;
  }
  
  /* Connector */
  .connector {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }
  
  .flow-visual {
    position: relative;
    width: 100px;
  }
  
  .flow-line {
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, #00D4FF 0%, #FF006E 100%);
    position: relative;
    overflow: hidden;
  }
  
  .flow-line::after {
    content: '';
    position: absolute;
    width: 30%;
    height: 100%;
    background: white;
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.8);
    animation: flow-connect 2s infinite;
  }
  
  @keyframes flow-connect {
    0% { left: -30%; }
    100% { left: 100%; }
  }
  
  .flow-text {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    margin-top: 1rem;
    font-size: 0.875rem;
    color: rgba(224, 224, 224, 0.6);
    white-space: nowrap;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  /* Patent badge */
  .patent-badge {
    text-align: center;
    margin-top: 4rem;
    padding: 0.75rem 2rem;
    display: inline-block;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 100px;
    color: rgba(224, 224, 224, 0.8);
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.025em;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
  }
  
  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .paradigm-section {
      padding: 4rem 0;
    }
    
    .section-title {
      font-size: 2rem;
      margin-bottom: 3rem;
    }
    
    .paradigm-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .paradigm-column {
      padding: 2rem;
    }
    
    .connector {
      height: 80px;
      position: relative;
    }
    
    .flow-visual {
      transform: rotate(90deg);
      width: 80px;
    }
    
    .flow-text {
      transform: translateX(-50%) rotate(-90deg);
      top: 50%;
      left: auto;
      right: -100%;
      margin-top: 0;
    }
    
    .compression-icon,
    .neural-icon {
      width: 80px;
      height: 80px;
    }
    
    .column-title {
      font-size: 1.5rem;
    }
    
    .feature-list li {
      font-size: 0.95rem;
    }
  }
</style>