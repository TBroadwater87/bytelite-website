---
export interface Props {
  variant?: 'default' | 'compact';
}

const { variant = 'default' } = Astro.props;
---

<section class={`verification-section ${variant}`}>
  <div class="container mx-auto px-4 sm:px-6">
    <div class="max-w-6xl mx-auto">
      <h2 class="section-title">Independent Verification</h2>
      
      <div class="verification-grid">
        <!-- Patent Status -->
        <div class="verification-card">
          <div class="card-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 11V6a3 3 0 116 0v5M3 13h18l-1 9H4l-1-9z"/>
            </svg>
          </div>
          <h3>Patent Protected</h3>
          <p class="card-detail">US Patent 63/807,027</p>
          <a href="https://patents.google.com/patent/US63807027" class="card-link" target="_blank" rel="noopener">
            Verify on USPTO ‚Üí
          </a>
        </div>
        
        <!-- Hutter Prize -->
        <div class="verification-card">
          <div class="card-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0016.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 002 8.5c0 2.3 1.5 4.05 3 5.5Z"/>
            </svg>
          </div>
          <h3>Hutter Prize</h3>
          <p class="card-detail">Submission Planned</p>
          <span class="card-status">Universal Dictionaries Implemented</span>
        </div>
        
        <!-- Peer Review -->
        <div class="verification-card">
          <div class="card-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z"/>
              <path d="M14 2v6h6M16 13H8M16 17H8M10 9H8"/>
            </svg>
          </div>
          <h3>Academic Review</h3>
          <p class="card-detail">Papers in Preparation</p>
          <span class="card-status coming-soon">Planned for 2026</span>
        </div>
        
        <!-- Independent Testing -->
        <div class="verification-card">
          <div class="card-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 3h18v18H3zM12 8v8M8 12h8"/>
            </svg>
          </div>
          <h3>Verification Tools</h3>
          <p class="card-detail">Open Source Verifier</p>
          <span class="card-status coming-soon">Coming Soon</span>
        </div>
      </div>
      
      <!-- Achievements Bar -->
      <div class="achievements-bar">
        <div class="achievement">
          <span class="achievement-icon">üèÜ</span>
          <span class="achievement-text">Hutter Prize Submission: Planned</span>
        </div>
        <div class="achievement">
          <span class="achievement-icon">‚úÖ</span>
          <span class="achievement-text">Universal Dictionaries: Implemented</span>
        </div>
        <div class="achievement">
          <span class="achievement-icon">üõ°Ô∏è</span>
          <span class="achievement-text">Genesis Goal Keeper: Fully Operational</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .verification-section {
    padding: 5rem 0;
    background: linear-gradient(180deg, transparent 0%, rgba(0, 212, 255, 0.02) 50%, transparent 100%);
  }
  
  .section-title {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 3rem;
    background: linear-gradient(135deg, #E0E0E0 0%, #00D4FF 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .verification-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }
  
  .verification-card {
    background: rgba(10, 14, 39, 0.6);
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
  }
  
  .verification-card:hover {
    transform: translateY(-5px);
    border-color: rgba(0, 212, 255, 0.4);
    box-shadow: 0 10px 30px rgba(0, 212, 255, 0.1);
  }
  
  .card-icon {
    display: inline-flex;
    color: #00D4FF;
    margin-bottom: 1rem;
  }
  
  .verification-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #E0E0E0;
  }
  
  .card-detail {
    color: rgba(224, 224, 224, 0.8);
    margin-bottom: 1rem;
    font-size: 0.875rem;
  }
  
  .card-link {
    color: #00D4FF;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
    transition: all 0.2s ease;
  }
  
  .card-link:hover {
    color: #66E0FF;
    transform: translateX(3px);
    display: inline-block;
  }
  
  .card-status {
    display: inline-block;
    padding: 0.25rem 1rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background: rgba(0, 212, 255, 0.1);
    color: #00D4FF;
    border: 1px solid rgba(0, 212, 255, 0.3);
  }
  
  .card-status.coming-soon {
    background: rgba(168, 85, 247, 0.1);
    color: #A855F7;
    border-color: rgba(168, 85, 247, 0.3);
  }
  
  /* Achievements Bar */
  .achievements-bar {
    background: rgba(10, 14, 39, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1.5rem;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
  }
  
  .achievement {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .achievement-icon {
    font-size: 1.5rem;
  }
  
  .achievement-text {
    color: rgba(224, 224, 224, 0.9);
    font-weight: 500;
  }
  
  /* Compact variant */
  .verification-section.compact {
    padding: 3rem 0;
  }
  
  .compact .section-title {
    font-size: 2rem;
    margin-bottom: 2rem;
  }
  
  .compact .verification-grid {
    gap: 1rem;
    margin-bottom: 2rem;
  }
  
  .compact .verification-card {
    padding: 1.5rem;
  }
  
  @media (max-width: 768px) {
    .section-title {
      font-size: 2rem;
    }
    
    .verification-grid {
      grid-template-columns: 1fr;
    }
    
    .achievements-bar {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
    
    .achievement {
      justify-content: center;
    }
  }
</style>