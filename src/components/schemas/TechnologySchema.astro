---
export interface Props {
  title: string;
  description: string;
  imageUrl: string;
}

const { title, description, imageUrl } = Astro.props;
const siteUrl = 'https://thebytelite.com';

const techArticleSchema = {
  "@context": "https://schema.org",
  "@type": "TechArticle",
  "headline": title,
  "description": description,
  "image": imageUrl,
  "datePublished": "2024-01-15",
  "dateModified": new Date().toISOString(),
  "author": {
    "@type": "Organization",
    "name": "ByteLite Technologies",
    "url": siteUrl
  },
  "publisher": {
    "@type": "Organization", 
    "name": "ByteLite Technologies",
    "logo": {
      "@type": "ImageObject",
      "url": `${siteUrl}/bytelite-logo.png`
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `${siteUrl}/technology`
  },
  "articleBody": "Classical compression hit a wall. ByteLite is an engineered attempt to get around it for structured data: dictionary cascades, Szudzik pairing, and shared-model assumptions that change what 'compressed' means.",
  "keywords": "dictionary cascade compression, structured data compression, Szudzik pairing, frontier compression",
  "articleSection": "Technology",
  "proficiencyLevel": "Advanced",
  "dependencies": "None - Standalone compression technology",
  "technicalFeatures": [
    "Different architecture, not incremental improvement",
    "Targeting ratios that would reset leaderboards",
    "Deterministic, repeatable, verifiable",
    "Patent pending, Hutter Prize submission planned"
  ]
};

const howToSchema = {
  "@context": "https://schema.org",
  "@type": "HowTo",
  "name": "How ByteLite Compression Works",
  "description": "Understanding the dictionary-cascade compression architecture",
  "image": imageUrl,
  "supply": [
    {
      "@type": "HowToSupply",
      "name": "Structured data to be compressed"
    }
  ],
  "tool": [
    {
      "@type": "HowToTool",
      "name": "ByteLite Compression Engine"
    }
  ],
  "step": [
    {
      "@type": "HowToStep",
      "name": "Pattern Matching",
      "text": "ByteLite matches data patterns against pre-trained dictionaries",
      "image": `${siteUrl}/assets/diagrams/step1.png`
    },
    {
      "@type": "HowToStep",
      "name": "Dictionary Cascade",
      "text": "Apply dictionary cascade with Szudzik pairing for compact representation",
      "image": `${siteUrl}/assets/diagrams/step2.png`
    },
    {
      "@type": "HowToStep",
      "name": "Deterministic Encoding",
      "text": "Generate compact key/seed using shared-model assumptions",
      "image": `${siteUrl}/assets/diagrams/step3.png`
    }
  ],
  "totalTime": "PT0.001S",
  "yield": "Dramatic compression on data similar to training corpora"
};
---

<script type="application/ld+json" set:html={JSON.stringify([techArticleSchema, howToSchema])} />