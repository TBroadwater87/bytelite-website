---
/* src/layouts/BaseLayout.astro */
import Seo from "../components/Seo.astro";
const { title = "ByteLite", desc = "Lossless 99.999%+ compression" } = Astro.props;
---
<!doctype html>
<html lang="en">
  <Seo title={title} description={desc} />
  <body class="font-sans text-slate-900 bg-white">
    <header class="mx-auto max-w-screen-xl p-4 flex justify-between items-center">
      <a href="/" class="text-xl font-bold">ByteLite</a>
      <nav class="space-x-6 text-sm">
        <a href="/">Home</a>
        <a href="/technology">Technology</a>
        <a href="/proof">Proof</a>
        <a href="/pricing">Pricing</a>
        <a href="/news">News</a>
        <a href="/contact">Contact</a>
      </nav>
    </header>

    <main class="mx-auto max-w-screen-xl px-4">
      <slot />
    </main>

    <footer class="mx-auto max-w-screen-xl p-4 text-xs text-center">
      <p>© {new Date().getFullYear()} ByteLite LLC — Patent Pending</p>
    </footer>
  </body>
</html>
