---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "Revolutionary compression technology achieving 1TB to 18 bytes.", image = "/bytelite-logo.png" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/bytelite-logo.png" />
    <title>{title}</title>
  </head>
  <body class="bg-dark-navy text-white">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
