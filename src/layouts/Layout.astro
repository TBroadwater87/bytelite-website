---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  includeAnalytics?: boolean;
}

const { 
  title, 
  description = "ByteLite compression technology transforms 1GB into 11 bytes through revolutionary recursive mathematical operations. Patent pending US 63/807,027.",
  image = "/bytelite-og-image.jpg",
  includeAnalytics = true
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | ByteLite - 1GB â†’ 11 Bytes</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title + " | ByteLite"} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={`https://thebytelite.com${Astro.url.pathname}`} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/bytelite-logo.png" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-dark-navy text-white">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <style is:global>
      :root {
        --color-primary: #00D4FF;
        --color-secondary: #FF006E;
        --color-bg-dark: #0A0E27;
        --color-bg-darker: #060813;
        --color-text: #E0E0E0;
        --color-text-dim: rgba(224, 224, 224, 0.7);
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: var(--color-bg-darker);
        color: var(--color-text);
        line-height: 1.6;
        overflow-x: hidden;
      }
      
      code, pre {
        font-family: 'JetBrains Mono', monospace;
      }
      
      ::selection {
        background: var(--color-primary);
        color: var(--color-bg-dark);
      }
      
      html {
        scroll-behavior: smooth;
      }
    </style>
    
    {includeAnalytics && (
      <Fragment>
        <!-- Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
        <script>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', 'G-XXXXXXXXXX');
        </script>
      </Fragment>
    )}
  </body>
</html>
