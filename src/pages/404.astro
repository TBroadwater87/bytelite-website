---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found">
  <section class="error-page">
    <div class="container">
      <h1>404</h1>
      <p>Page not found</p>
      <a href="/" aria-label="Download ByteLite Blueprint" class="btn btn-primary">Back to Home</a>
    </div>
  </section>
</Layout>

<style>
  .error-page {
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .error-page h1 {
    font-size: 6rem;
    background: var(--gradient-accent);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .error-page p {
    font-size: 1.5rem;
    color: var(--color-text-muted);
    margin: 1rem 0 2rem;
  }
</style>

