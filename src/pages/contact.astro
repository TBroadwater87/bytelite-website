---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact" description="Get in touch with ByteLite">
  <section class="hero-section">
    <div class="container">
      <h1>Get in <span class="glow-text">Touch</span></h1>
      <p class="hero-subtitle">Let's discuss how ByteLite can transform your data infrastructure</p>
    </div>
  </section>

  <section class="contact-section">
    <div class="container">
      <div class="contact-content">
        <div class="contact-info">
          <h2>Let's Talk</h2>
          <p>Whether you're interested in licensing, have technical questions, or want to explore partnership opportunities, we're here to help.</p>
          
          <div class="info-items">
            <div class="info-item">
              <h3>Email</h3>
              <p><a href="mailto:info@thebytelite.com">info@thebytelite.com</a></p>
            </div>
            <div class="info-item">
              <h3>Response Time</h3>
              <p>We typically respond within 24 business hours</p>
            </div>
            <div class="info-item">
              <h3>Patent Information</h3>
              <p>U.S. Patent Application No. 63/807,027</p>
            </div>
          </div>
        </div>

        <div class="contact-form-wrapper">
          <form class="contact-form">
            <div class="form-group">
              <label for="contact-name">Name</label>
              <input type="text" id="contact-name" name="name" required>
            </div>
            <div class="form-group">
              <label for="contact-email">Email</label>
              <input type="email" id="contact-email" name="email" required>
            </div>
            <div class="form-group">
              <label for="contact-subject">Subject</label>
              <select id="contact-subject" name="subject" required>
                <option value="">Select a topic</option>
                <option value="licensing">Licensing Inquiry</option>
                <option value="technical">Technical Question</option>
                <option value="partnership">Partnership Opportunity</option>
                <option value="media">Media Request</option>
                <option value="other">Other</option>
              </select>
            </div>
            <div class="form-group">
              <label for="contact-message">Message</label>
              <textarea id="contact-message" name="message" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Send Message</button>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero-section {
    padding: 4rem 0;
    text-align: center;
    background: var(--gradient-hero);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-top: 1rem;
  }

  .contact-section {
    padding: 5rem 0;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .contact-info h2 {
    margin-bottom: 1rem;
  }

  .contact-info > p {
    color: var(--color-text-muted);
    line-height: 1.8;
    margin-bottom: 2rem;
  }

  .info-items {
    display: grid;
    gap: 1.5rem;
  }

  .info-item h3 {
    font-size: 1rem;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .info-item p {
    color: var(--color-text-muted);
  }

  .info-item a {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s;
  }

  .info-item a:hover {
    color: var(--color-primary);
  }

  .contact-form-wrapper {
    background: var(--color-surface);
    padding: 2.5rem;
    border-radius: 1rem;
    border: 1px solid rgba(0, 212, 255, 0.2);
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem 1rem;
    background: var(--color-bg);
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: 0.5rem;
    color: var(--color-text);
    font-size: 1rem;
    font-family: inherit;
    transition: border-color 0.2s;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.1);
  }

  .form-group textarea {
    resize: vertical;
  }

  @media (max-width: 768px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }
</style>

<script>
  document.querySelector('.contact-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const button = e.target.querySelector('button');
    button.textContent = 'Sending...';
    button.disabled = true;
    
    // Simulate sending
    await new Promise(resolve => setTimeout(resolve, 1500));
    
    button.textContent = 'Message Sent!';
    button.style.background = 'linear-gradient(135deg, #10B981 0%, #059669 100%)';
    
    setTimeout(() => {
      e.target.reset();
      button.textContent = 'Send Message';
      button.style.background = '';
      button.disabled = false;
    }, 3000);
  });
</script>
