---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout title="Contact" description="Get in touch with ByteLite">
  <section class="hero-section">
    <div class="container">
      <h1>Get in <span class="glow-text">Touch</span></h1>
      <p class="hero-subtitle">Let's discuss how ByteLite can transform your data infrastructure</p>
    </div>
  </section>

  <section class="contact-section">
    <div class="container">
      <div class="contact-content">
        <div class="contact-info">
          <h2>Let's Talk</h2>
          <p>Whether you're interested in licensing, have technical questions, or want to explore partnership opportunities, we're here to help.</p>
          
          <div class="info-items">
            <div class="info-item">
              <h3>Email</h3>
              <p><a href="mailto:info@thebytelite.com">info@thebytelite.com</a></p>
            </div>
            <div class="info-item">
              <h3>Response Time</h3>
              <p>We typically respond within 24 business hours</p>
            </div>
            <div class="info-item">
              <h3>Patent Information</h3>
              <p>U.S. Patent Application No. 63/807,027</p>
            </div>
          </div>
        </div>

        <div class="contact-form-wrapper">
          <ContactForm />
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero-section {
    padding: 4rem 0;
    text-align: center;
    background: var(--gradient-hero);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-top: 1rem;
  }

  .contact-section {
    padding: 5rem 0;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .contact-info h2 {
    margin-bottom: 1rem;
  }

  .contact-info > p {
    color: var(--color-text-muted);
    line-height: 1.8;
    margin-bottom: 2rem;
  }

  .info-items {
    display: grid;
    gap: 1.5rem;
  }

  .info-item h3 {
    font-size: 1rem;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .info-item p {
    color: var(--color-text-muted);
  }

  .info-item a {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s;
  }

  .info-item a:hover {
    color: var(--color-primary);
  }

  .contact-form-wrapper {
    background: var(--color-surface);
    padding: 2.5rem;
    border-radius: 1rem;
    border: 1px solid rgba(0, 212, 255, 0.2);
  }

  @media (max-width: 768px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }
</style>

