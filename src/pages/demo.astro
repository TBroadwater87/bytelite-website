---
import Layout from '../layouts/Layout.astro';
import InteractiveCompressionDemo from '../components/InteractiveCompressionDemo.tsx';
import HighLevelVisualization from '../components/HighLevelVisualization.astro';
import CompressionDemo from '../components/CompressionDemo.astro';
import DemoSchema from '../components/schemas/DemoSchema.astro';
---

<Layout 
  title="Live Demo - ByteLite Data Transformation & Quantum Compression"
  description="Experience ByteLite's breakthrough data transformation technology live. Upload any file and witness quantum compression achieving bytescale reduction from 1GB to 15 bytes. Interactive demonstration of revolutionary data miniaturization and lossless compression verification."
  keywords={["compression demo", "data transformation demonstration", "quantum compression test", "bytescale reduction demo", "interactive compression", "data miniaturization tool", "lossless compression verification", "ByteLite demonstration", "file compression technology", "real-time data transformation"]}
  schemaType="WebApplication"
>
  <DemoSchema slot="head" />

  <section class="demo-content">
    <div class="container">
      <!-- Interactive File Upload Demo -->
      <div class="demo-section">
        <h2>Try It Yourself</h2>
        <p class="section-description">
          Upload any file to see ByteLite's compression ratios in real-time. 
          Our technology works with any file type - documents, images, videos, and more.
        </p>
        <InteractiveCompressionDemo client:load />
      </div>

      <!-- Static Benchmark Demo -->
      <div class="demo-section">
        <h2>Benchmark Results</h2>
        <p class="section-description">
          See our verified results on standard compression benchmarks.
        </p>
        <CompressionDemo />
      </div>

      <!-- How It Works -->
      <div class="demo-section">
        <h2>How It Works</h2>
        <p class="section-description">
          A high-level overview of ByteLite's revolutionary compression technology.
        </p>
        <HighLevelVisualization />
      </div>

      <!-- Call to Action -->
      <div class="cta-section">
        <h3>Ready for Deep Kore Neural Recursion?</h3>
        <p>Subscribe to get notified when the ByteLite Application Demo is available and receive updates on our AGI breakthrough.</p>
        <div class="cta-buttons">
          <a href="/subscribe" class="btn btn-primary">Subscribe for Updates</a>
          <a href="/technology" class="btn btn-secondary">Learn More</a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .demo-content {
    padding: 4rem 0;
    background: var(--color-bg-darker);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .demo-section {
    margin-bottom: 6rem;
  }

  .demo-section h2 {
    font-size: 2.5rem;
    color: var(--color-primary);
    text-align: center;
    margin-bottom: 1rem;
  }

  .section-description {
    text-align: center;
    color: var(--color-text-dim);
    font-size: 1.125rem;
    max-width: 600px;
    margin: 0 auto 3rem;
    line-height: 1.6;
  }

  .cta-section {
    background: linear-gradient(135deg, rgba(0, 212, 255, 0.05) 0%, rgba(255, 0, 110, 0.05) 100%);
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: 16px;
    padding: 4rem 2rem;
    text-align: center;
    margin-top: 6rem;
  }

  .cta-section h3 {
    font-size: 2rem;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .cta-section p {
    color: var(--color-text-dim);
    font-size: 1.125rem;
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: 1rem 2rem;
    font-size: 1.125rem;
    font-weight: 600;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .btn-primary {
    background: var(--color-primary);
    color: var(--color-bg-dark);
  }

  .btn-primary:hover {
    background: #00A8CC;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 212, 255, 0.3);
  }

  .btn-secondary {
    background: transparent;
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
  }

  .btn-secondary:hover {
    background: var(--color-primary);
    color: var(--color-bg-dark);
  }

  /* Interactive Compression Demo Styles */
  :global(.compression-demo) {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  :global(.demo-header) {
    margin-bottom: 2rem;
  }

  :global(.demo-header h3) {
    font-size: 1.5rem;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  :global(.demo-header p) {
    color: var(--color-text-dim);
  }

  :global(.upload-zone) {
    background: linear-gradient(135deg, rgba(0, 212, 255, 0.05), rgba(255, 0, 110, 0.05));
    border: 2px dashed rgba(0, 212, 255, 0.3);
    border-radius: 16px;
    padding: 3rem 2rem;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-bottom: 2rem;
  }

  :global(.upload-zone:hover) {
    border-color: var(--color-primary);
    background: linear-gradient(135deg, rgba(0, 212, 255, 0.1), rgba(255, 0, 110, 0.1));
  }

  :global(.upload-zone.drag-active) {
    border-color: var(--color-primary);
    border-style: solid;
    background: rgba(0, 212, 255, 0.1);
  }

  :global(.upload-zone.has-file) {
    border-style: solid;
  }

  :global(.upload-icon) {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  :global(.upload-text) {
    font-size: 1.125rem;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  :global(.upload-hint) {
    font-size: 0.875rem;
    color: var(--color-text-dim);
  }

  :global(.file-info) {
    animation: fadeIn 0.3s ease;
  }

  :global(.file-info h4) {
    color: var(--color-text);
    margin: 0.5rem 0;
  }

  :global(.file-size) {
    color: var(--color-primary);
    font-weight: 600;
    margin-bottom: 1rem;
  }

  :global(.change-file) {
    background: transparent;
    border: 1px solid var(--color-text-dim);
    color: var(--color-text-dim);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 0.875rem;
  }

  :global(.change-file:hover) {
    border-color: var(--color-primary);
    color: var(--color-primary);
  }

  :global(.compress-button) {
    background: linear-gradient(135deg, var(--color-primary), #0099CC);
    color: var(--color-bg-dark);
    border: none;
    padding: 1rem 3rem;
    border-radius: 8px;
    font-size: 1.125rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0 auto;
  }

  :global(.compress-button:hover:not(:disabled)) {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 212, 255, 0.4);
  }

  :global(.compress-button:disabled) {
    opacity: 0.7;
    cursor: not-allowed;
  }

  :global(.spinner) {
    width: 16px;
    height: 16px;
    border: 2px solid transparent;
    border-top-color: currentColor;
    border-radius: 50%;
    animation: spin 0.6s linear infinite;
  }

  :global(.compression-result) {
    background: rgba(10, 14, 39, 0.6);
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: 16px;
    padding: 2rem;
    margin-top: 2rem;
    animation: fadeIn 0.5s ease;
  }

  :global(.result-header) {
    margin-bottom: 2rem;
  }

  :global(.result-header h4) {
    color: var(--color-primary);
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  :global(.compression-time) {
    color: var(--color-text-dim);
    font-size: 0.875rem;
  }

  :global(.result-comparison) {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  :global(.result-box) {
    background: rgba(0, 0, 0, 0.3);
    padding: 1.5rem;
    border-radius: 12px;
    min-width: 120px;
  }

  :global(.result-box h5) {
    color: var(--color-text-dim);
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
  }

  :global(.result-box .size) {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text);
  }

  :global(.result-box.compressed .size) {
    color: var(--color-primary);
  }

  :global(.extension) {
    color: var(--color-text-dim);
    font-size: 0.875rem;
    margin-top: 0.25rem;
  }

  :global(.arrow-container) {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  :global(.compression-arrow) {
    font-size: 2rem;
    color: var(--color-primary);
  }

  :global(.ratio) {
    background: var(--color-primary);
    color: var(--color-bg-dark);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
  }

  :global(.result-footer) {
    text-align: center;
  }

  :global(.verification) {
    color: #00FF00;
    font-size: 0.875rem;
    margin-bottom: 1rem;
  }

  :global(.try-another) {
    background: transparent;
    border: 2px solid var(--color-primary);
    color: var(--color-primary);
    padding: 0.75rem 2rem;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 600;
  }

  :global(.try-another:hover) {
    background: var(--color-primary);
    color: var(--color-bg-dark);
  }

  /* Progress Bar Styles */
  :global(.progress-container) {
    margin-top: 2rem;
    animation: fadeIn 0.3s ease;
  }

  :global(.progress-bar) {
    width: 100%;
    height: 8px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 1rem;
  }

  :global(.progress-fill) {
    height: 100%;
    background: linear-gradient(90deg, var(--color-primary), #00A8CC);
    border-radius: 4px;
    transition: width 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  :global(.progress-fill::after) {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    animation: shimmer 1.5s infinite;
  }

  :global(.progress-text) {
    text-align: center;
    color: var(--color-text-dim);
    font-size: 0.875rem;
  }

  /* Focus styles for better keyboard navigation */
  :global(.upload-zone:focus) {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  :global(.compress-button:focus),
  :global(.change-file:focus),
  :global(.try-another:focus) {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  @media (max-width: 768px) {
    .demo-section h2 {
      font-size: 2rem;
    }

    .cta-section {
      padding: 3rem 1.5rem;
    }

    .cta-section h3 {
      font-size: 1.5rem;
    }

    :global(.result-comparison) {
      flex-direction: column;
      gap: 1rem;
    }

    :global(.upload-zone) {
      padding: 2rem 1rem;
    }
  }
</style>