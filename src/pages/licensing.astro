---
import Layout from '../layouts/Layout.astro';
---

<Layout title="ByteLite Licensing">
  <div class="bg-dark-navy text-white">
    <section class="py-20">
      <div class="container mx-auto px-6">
        <h1 class="text-5xl font-bold mb-12 text-center">Enterprise Licensing</h1>
        
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-deep-space/50 rounded-lg p-8">
            <h2 class="text-3xl font-bold text-electric-cyan mb-6">50% of storage savings</h2>
            <p class="text-gray-300">You only pay 50% of what ByteLite saves you.</p>
          </div>

          <div class="bg-deep-space/50 rounded-lg p-8">
            <h3 class="text-2xl font-bold text-quantum-pink mb-6">Enterprise Features:</h3>
            <div class="space-y-3 text-gray-300">
              <p><span class="text-electric-cyan">-</span> Unlimited users & systems</p>
              <p><span class="text-electric-cyan">-</span> On-premise deployment option</p>
              <p><span class="text-electric-cyan">-</span> Custom SLA & support</p>
              <p><span class="text-electric-cyan">-</span> Source code escrow</p>
              <p><span class="text-electric-cyan">-</span> Dedicated engineering team</p>
              <p><span class="text-electric-cyan">-</span> Real-time compression metrics</p>
              <p><span class="text-electric-cyan">-</span> Automated savings calculation</p>
              <p><span class="text-electric-cyan">-</span> Minimal telemetry</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>
