---
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="ByteLite Licensing | Enterprise Compression Solutions"
  description="Enterprise licensing for ByteLite compression technology."
>
  <div class="bg-dark-navy text-white">
    <!-- Hero Section -->
    <section class="py-20 bg-gradient-to-br from-deep-space to-dark-navy">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl font-bold mb-6">Enterprise Licensing</h1>
          <p class="text-xl text-gray-300 mb-8">
            Revolutionary compression technology for enterprise deployments
          </p>
          <div class="inline-flex items-center bg-electric-cyan/10 border border-electric-cyan/30 rounded-full px-6 py-2">
            <span class="text-electric-cyan font-mono">Usage-Based Pricing</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Simple Pricing Model -->
    <section class="py-20">
      <div class="container mx-auto px-6">
        <div class="max-w-6xl mx-auto">
          <div class="grid md:grid-cols-2 gap-8">
            
            <!-- Left Column: Pricing Model -->
            <div class="bg-deep-space/50 rounded-lg p-8 border border-electric-cyan/20">
              <h2 class="text-3xl font-bold text-electric-cyan mb-6">Simple Usage Pricing</h2>
              
              <div class="space-y-6">
                <div class="border-l-4 border-electric-cyan pl-6">
                  <h3 class="text-xl font-bold text-white mb-2">Tier 1: Small Scale</h3>
                  <p class="text-gray-300">Less than 1TB per month</p>
                  <p class="text-2xl font-bold text-electric-cyan">$0.001 per GB</p>
                </div>

                <div class="border-l-4 border-quantum-pink pl-6">
                  <h3 class="text-xl font-bold text-white mb-2">Tier 2: Medium Scale</h3>
                  <p class="text-gray-300">1TB to 100TB per month</p>
                  <p class="text-2xl font-bold text-quantum-pink">$0.0005 per GB</p>
                </div>

                <div class="border-l-4 border-electric-cyan pl-6">
                  <h3 class="text-xl font-bold text-white mb-2">Tier 3: Enterprise</h3>
                  <p class="text-gray-300">100TB+ per month</p>
                  <p class="text-2xl font-bold text-electric-cyan">$0.0001 per GB</p>
                </div>
              </div>

              <div class="mt-8 p-4 bg-dark-navy/50 rounded-lg">
                <p class="text-sm text-gray-400">
                  Setup fee: $2,500 one-time | Minimum contract: 12 months
                </p>
              </div>
            </div>

            <!-- Right Column: Enterprise Features -->
            <div class="bg-deep-space/50 rounded-lg p-8 border border-quantum-pink/20">
              <h3 class="text-2xl font-bold text-quantum-pink mb-6">Enterprise Features</h3>
              
              <div class="space-y-4 text-gray-300">
                <div class="flex items-start space-x-3">
                  <span class="text-electric-cyan text-xl">-</span>
                  <div>
                    <h4 class="font-semibold text-white">Unlimited Users & Systems</h4>
                    <p class="text-sm">Deploy across your entire infrastructure</p>
                  </div>
                </div>

                <div class="flex items-start space-x-3">
                  <span class="text-electric-cyan text-xl">-</span>
                  <div>
                    <h4 class="font-semibold text-white">On-Premise Deployment</h4>
                    <p class="text-sm">Install within your secure environment</p>
                  </div>
                </div>

                <div class="flex items-start space-x-3">
                  <span class="text-electric-cyan text-xl">-</span>
                  <div>
                    <h4 class="font-semibold text-white">Custom SLA & Support</h4>
                    <p class="text-sm">24/7 technical support and guarantees</p>
                  </div>
                </div>

                <div class="flex items-start space-x-3">
                  <span class="text-electric-cyan text-xl">-</span>
                  <div>
                    <h4 class="font-semibold text-white">Source Code Escrow</h4>
                    <p class="text-sm">Protection for mission-critical deployments</p>
                  </div>
                </div>

                <div class="flex items-start space-x-3">
                  <span class="text-electric-cyan text-xl">-</span>
                  <div>
                    <h4 class="font-semibold text-white">Real-Time Metrics</h4>
                    <p class="text-sm">Compression analytics and monitoring</p>
                  </div>
                </div>

                <div class="flex items-start space-x-3">
                  <span class="text-electric-cyan text-xl">-</span>
                  <div>
                    <h4 class="font-semibold text-white">Automated Billing</h4>
                    <p class="text-sm">Usage tracking and monthly reporting</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-20 bg-deep-space/30">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-6 text-electric-cyan">Ready to Get Started?</h2>
          <p class="text-xl text-gray-300 mb-8">
            Contact us to discuss enterprise licensing and custom implementation.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="bg-electric-cyan text-dark-navy px-8 py-4 rounded-lg font-semibold hover:bg-electric-cyan/90 transition-colors">
              Contact Sales
            </a>
            <a href="/download" class="border border-quantum-pink text-quantum-pink px-8 py-4 rounded-lg font-semibold hover:bg-quantum-pink/10 transition-colors">
              Download Blueprint ($0.99)
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>
