<style>
  .pricing-section {
    padding: 80px 0;
  }

  .tier-section {
    margin-bottom: 80px;
  }

  .tier-section h2 {
    text-align: center;
    color: var(--color-primary);
    margin-bottom: 20px;
    font-size: 2.5rem;
  }

  .tier-description {
    text-align: center;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto 40px;
  }

  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    max-width: 700px;
    margin: 0 auto;
  }

  .business-grid {
    max-width: 100%;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  }

  .pricing-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(0, 212, 255, 0.1);
    border-radius: 16px;
    padding: 40px 30px;
    position: relative;
    transition: all 0.3s ease;
  }

  .pricing-card:hover {
    transform: translateY(-5px);
    border-color: rgba(0, 212, 255, 0.3);
    box-shadow: 0 10px 40px rgba(0, 212, 255, 0.1);
  }

  .pricing-card.featured {
    border-color: var(--color-primary);
    background: rgba(0, 212, 255, 0.05);
  }

  .badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-primary);
    color: var(--color-bg);
    padding: 4px 20px;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .pricing-card h3 {
    font-size: 1.5rem;
    margin-bottom: 20px;
    color: var(--color-text);
  }

  .price {
    display: flex;
    align-items: baseline;
    margin-bottom: 10px;
  }

  .price-main {
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .price-period {
    font-size: 1.2rem;
    color: var(--color-text-secondary);
    margin-left: 5px;
  }

  .price-alternate {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    margin-bottom: 30px;
    font-style: italic;
  }

  .pricing-card ul {
    list-style: none;
    padding: 0;
    margin: 0 0 30px 0;
  }

  .pricing-card li {
    padding: 10px 0;
    color: var(--color-text-secondary);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .pricing-card li:last-child {
    border-bottom: none;
  }

  /* Enterprise Card */
  .enterprise-card {
    background: linear-gradient(135deg, rgba(0, 212, 255, 0.1) 0%, rgba(255, 0, 110, 0.05) 100%);
    border: 2px solid rgba(0, 212, 255, 0.3);
    border-radius: 24px;
    padding: 60px;
    margin: 0 auto;
    max-width: 1000px;
  }

  .enterprise-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .enterprise-header h3 {
    font-size: 2rem;
    margin-bottom: 20px;
    color: var(--color-text);
  }

  .enterprise-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    margin-bottom: 40px;
  }

  .savings-example {
    background: rgba(0, 0, 0, 0.3);
    border-radius: 12px;
    padding: 20px;
    margin-top: 20px;
  }

  .savings-example h4 {
    color: var(--color-primary);
    margin-bottom: 15px;
  }

  .savings-example ul {
    list-style: none;
    padding: 0;
  }

  .savings-example li {
    padding: 5px 0;
    color: var(--color-text-secondary);
  }

  .savings-example strong {
    color: var(--color-primary);
  }

  .enterprise-features h4 {
    color: var(--color-primary);
    margin-bottom: 15px;
  }

  .enterprise-features ul {
    list-style: none;
    padding: 0;
  }

  .enterprise-features li {
    padding: 8px 0;
    color: var(--color-text-secondary);
  }

  .telemetry-note {
    background: rgba(0, 212, 255, 0.05);
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 30px;
  }

  .telemetry-note p {
    margin: 0;
    color: var(--color-text);
    line-height: 1.6;
  }

  /* Comparison Table */
  .comparison-section {
    margin-top: 80px;
  }

  .comparison-section h2 {
    text-align: center;
    color: var(--color-primary);
    margin-bottom: 40px;
  }

  .comparison-table {
    overflow-x: auto;
  }

  .comparison-table table {
    width: 100%;
    border-collapse: collapse;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 16px;
    overflow: hidden;
  }

  .comparison-table th,
  .comparison-table td {
    padding: 20px;
    text-align: center;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .comparison-table th {
    background: rgba(0, 212, 255, 0.1);
    font-weight: 600;
    color: var(--color-primary);
  }

  .comparison-table td:first-child {
    text-align: left;
    font-weight: 600;
    color: var(--color-text);
  }

  .comparison-table tr:last-child td {
    border-bottom: none;
  }

  @media (max-width: 968px) {
    .enterprise-content {
      grid-template-columns: 1fr;
    }

    .enterprise-card {
      padding: 40px 30px;
    }

    .comparison-table {
      font-size: 0.875rem;
    }

    .comparison-table th,
    .comparison-table td {
      padding: 12px 8px;
    }
  }

  @media (max-width: 768px) {
    .pricing-grid {
      grid-template-columns: 1fr;
    }

    .price-main {
      font-size: 2.5rem;
    }
  }
</style>

