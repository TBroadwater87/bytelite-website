<style>
  .hero-mini {
    background: linear-gradient(180deg, rgba(0, 212, 255, 0.05) 0%, transparent 100%);
  }
  
  /* Papers Grid */
  .papers-grid {
    display: grid;
    gap: 2rem;
    margin-bottom: 2rem;
  }
  
  .paper-card {
    background: rgba(10, 14, 39, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s ease;
  }
  
  .paper-card.placeholder {
    border-style: dashed;
    opacity: 0.8;
  }
  
  .paper-card:hover {
    transform: translateY(-2px);
    border-color: rgba(0, 212, 255, 0.3);
  }
  
  .paper-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .paper-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #00D4FF;
  }
  
  .paper-authors {
    color: rgba(224, 224, 224, 0.7);
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
  }
  
  .paper-status {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #A855F7;
    font-weight: 600;
    margin-bottom: 1rem;
  }
  
  .paper-abstract {
    color: rgba(224, 224, 224, 0.8);
    font-size: 0.875rem;
    line-height: 1.6;
  }
  
  /* Verification Demo */
  .verification-demo {
    background: rgba(10, 14, 39, 0.8);
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: 12px;
    padding: 2rem;
  }
  
  .code-blocks {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 2rem;
    align-items: center;
    margin-bottom: 2rem;
  }
  
  .code-block {
    background: #0A0E27;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    overflow: hidden;
  }
  
  .code-header {
    background: rgba(0, 212, 255, 0.1);
    padding: 0.75rem 1rem;
    font-weight: 600;
    color: #00D4FF;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .code-block pre {
    padding: 1rem;
    margin: 0;
    overflow-x: auto;
  }
  
  .code-block code {
    color: #E0E0E0;
    font-size: 0.875rem;
    line-height: 1.6;
  }
  
  .arrow {
    font-size: 2rem;
    color: #00D4FF;
    text-align: center;
  }
  
  .verification-note {
    text-align: center;
    color: rgba(224, 224, 224, 0.8);
    font-style: italic;
  }
  
  /* Tools Grid */
  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }
  
  .tool-card {
    background: rgba(10, 14, 39, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 2rem;
    display: flex;
    flex-direction: column;
  }
  
  .tool-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }
  
  .tool-header h3 {
    font-size: 1.5rem;
    font-weight: 600;
  }
  
  .coming-soon {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: rgba(168, 85, 247, 0.1);
    color: #A855F7;
    border: 1px solid rgba(168, 85, 247, 0.3);
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }
  
  .tool-description {
    color: rgba(224, 224, 224, 0.8);
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }
  
  .tool-features {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }
  
  .feature {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: rgba(0, 212, 255, 0.1);
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: 20px;
    font-size: 0.75rem;
    color: #00D4FF;
  }
  
  /* Collaboration */
  .collaboration-card {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .collaboration-areas {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }
  
  .area {
    text-align: center;
  }
  
  .area h4 {
    font-size: 1.125rem;
    font-weight: 600;
    color: #00D4FF;
    margin-bottom: 0.5rem;
  }
  
  .area p {
    color: rgba(224, 224, 224, 0.7);
    font-size: 0.875rem;
  }
  
  /* Buttons */
  .btn {
    padding: 1rem 2.5rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
    border: none;
    cursor: pointer;
    font-size: 1rem;
  }
  
  .btn-primary {
    background: linear-gradient(135deg, #00D4FF 0%, #0099CC 100%);
    color: #0A0E27;
  }
  
  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 212, 255, 0.4);
  }
  
  .btn-outline {
    background: transparent;
    color: #00D4FF;
    border: 2px solid #00D4FF;
  }
  
  .btn-outline:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
  
  .btn-large {
    padding: 1.25rem 3rem;
    font-size: 1.125rem;
  }
  
  @media (max-width: 768px) {
    .code-blocks {
      grid-template-columns: 1fr;
    }
    
    .arrow {
      transform: rotate(90deg);
    }
    
    .tools-grid {
      grid-template-columns: 1fr;
    }
  }
</style>