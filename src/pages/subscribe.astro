import Layout from '../layouts/Layout.astro';
import SubscribeForm from '../components/SubscribeForm.astro';
---

<Layout 
  title="Subscribe for Updates - ByteLite" 
  description="Get exclusive updates on ByteLite Application Demo and Deep Kore Neural Recursion technology. Be first to know about our breakthrough in computational intelligence."
>

  <section class="subscribe-content">
    <div class="container">
      <!-- Main Subscription Form -->
      <SubscribeForm variant="hero" />

      <!-- Information Sections -->
      <div class="info-grid">
        <div class="info-card">
          <div class="info-icon">üß†</div>
          <h3>Deep Kore Neural Recursion</h3>
          <p>
            Our compression mathematics have revealed unprecedented patterns in recursive information processing, 
            leading to breakthroughs in neural computation that approach true AGI.
          </p>
        </div>
        
        <div class="info-card">
          <div class="info-icon">üîí</div>
          <h3>Controlled Release</h3>
          <p>
            Technical specifications are now classified due to dual-use considerations. 
            Subscribe to receive updates as authorized information becomes available.
          </p>
        </div>
        
        <div class="info-card">
          <div class="info-icon">üì±</div>
          <h3>ByteLite Application Demo</h3>
          <p>
            Experience the compression technology firsthand. Be notified immediately when our 
            demonstration application is ready for public release.
          </p>
        </div>
      </div>

      <!-- FAQ Section -->
      <div class="faq-section">
        <h2>Frequently Asked Questions</h2>
        
        <div class="faq-item">
          <h4>Why is the blueprint no longer available?</h4>
          <p>
            Our mathematical framework has implications beyond compression, particularly in achieving 
            true computational intelligence. We're working with appropriate authorities to ensure 
            responsible disclosure while protecting this breakthrough technology.
          </p>
        </div>
        
